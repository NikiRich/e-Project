<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/Layout.css" />
</head>
<body>
    <header>
        <ul class="nav justify-content-center bg-primary">
            <li class="nav-item">
                <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
                        @Html.AntiForgeryToken()
                    </form>
                    <a class="nav-link text-black" href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">Logout</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" asp-controller="Project" asp-action="Search">Search</a>
                </li>
                <li>
                    <a class="nav-link text-black" asp-controller="Project" asp-action="Import">Import</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                </li>
            }
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
