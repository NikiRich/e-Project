@{
    ViewData["Title"] = "Import Projects";
}

<h2>Import Projects</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="jsonFile">Upload JSON File:</label>
                <input type="file" name="jsonFile" accept=".json" required class="form-control" />
            </div>
        </div>
        <div class="col-md-4 mt-4">
            <button type="submit" class="btn btn-primary">Import</button>
        </div>
    </div>
</form>